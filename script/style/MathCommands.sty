% Multiple vertical lines for norms 
\newcommand{\vertn}[2]{%
  \ifcase#1
    \PackageError{vertn}{Zero bars not supported}{Specify 1, 2, or 3.}%
  \or
    {\left\vert #2 \right\vert}%
  \or
    {\left\Vert #2 \right\Vert}%
  \or
    {{\left\vert\kern-0.25ex\left\vert\kern-0.25ex\left\vert #2 
      \right\vert\kern-0.25ex\right\vert\kern-0.25ex\right\vert}}%
  \else
    \PackageError{vertn}{Only 1 to 3 bars supported}{Extend the macro if needed.}%
  \fi
}

