\ProvidesPackage{AlgEnvColored}
\usepackage[linesnumbered,lined,commentsnumbered]{algorithm2e}

% white/no background
\usepackage[dvipsnames,svgnames]{xcolor}
\definecolor{algBackground}{RGB}{255,255,255}

% Counter
\newcounter{algcounter}
\renewcommand{\thealgcounter}{\arabic{algcounter}}

% single algorithm
\newcommand{\algorithmbox}[3][]{
  \refstepcounter{algcounter}
  \noindent
  \colorbox{algBackground}{
    \parbox{\dimexpr\linewidth-2\fboxsep\relax}{
      \vspace*{.6\baselineskip}
      \hspace*{20pt}
      {\bfseries\sffamily Algorithmus \thealgcounter: #2}\\[.5\baselineskip]
      \hspace*{20pt}
      \begin{minipage}{\dimexpr\linewidth - 40pt\relax}
        #3
      \end{minipage}
      \vspace*{.6\baselineskip}
    }
  }
  \vspace{10pt}
}

% double algorithm next to each other
\newcommand{\algorithmboxDouble}[3][]{
  \refstepcounter{algcounter}
  \noindent
  \colorbox{algBackground}{
    \parbox{\dimexpr\linewidth-2\fboxsep\relax}{
      \vspace*{.6\baselineskip}
      \hspace*{20pt}
      {
        \bfseries\sffamily Algorithmus \thealgcounter\,+\,\refstepcounter{algcounter}\thealgcounter: #2
      }\\[.5\baselineskip]
      \hspace*{20pt}
      \begin{minipage}{\dimexpr\linewidth - 40pt\relax}
        #3
      \end{minipage}
      \vspace*{.6\baselineskip}
    }
  }
  \vspace{10pt}
}


